	КонецЦикла;
	
КонецПроцедуры

// Дописывает к движениям документов, начисливших з/пл за месяц, строки, обнуляющие движения по начислению аванса.
//
// Параметры:
//		Регистратор - ДокументСсылка -
//		Движения - коллекция движений регистратора.
//		Организация - СправочникСсылка.Организации -
//		ДатаОперации - дата -
//      ПериодыРегистрацииСотрудников - ТаблицаЗначений - содержит как минимум колонку ПериодРегистрации (тип Дата)
//
Процедура ДополнитьДвиженияСписаниемАванса(Регистратор, Движения, Организация, ДатаОперации, ПериодыРегистрацииСотрудников = Неопределено) Экспорт
	
	Если Не ПроведениеСервер.ЕстьДвижения(Движения, "СведенияОДоходахНДФЛ") Тогда // Доходы этим документом не начислялась - обнулять авансовые движения не будем.
		Возврат
	КонецЕсли;	
	
	НаборЗаписейОДоходах = Движения.СведенияОДоходахНДФЛ;
	
	ФизическиеЛица = НаборЗаписейОДоходах.Выгрузить().Скопировать(Новый Структура("КатегорияДохода", Перечисления.КатегорииДоходовНДФЛ.ОплатаТруда)).ВыгрузитьКолонку("ФизическоеЛицо");
	Если ФизическиеЛица.Количество() = 0 Тогда // Зарплата этим документом не начислялась - обнулять авансовые движения не будем.
		Возврат
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ПериодыРегистрацииСотрудников) Тогда
		ВсегоМесяцев = ПериодыРегистрацииСотрудников.Количество();
		Месяцы = ПериодыРегистрацииСотрудников.ВыгрузитьКолонку("ПериодРегистрации");
	Иначе
		ВсегоМесяцев = 1;
		Месяцы = ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(НачалоМесяца(НаборЗаписейОДоходах[0].Период));
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	Запрос.УстановитьПараметр("Организация", Организация);
	Запрос.УстановитьПараметр("Месяцы", Месяцы);
	Запрос.УстановитьПараметр("ФизическиеЛица", ФизическиеЛица);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ДокументыУчтенныеПриРасчетеНДФЛ.ФизическоеЛицо КАК ФизическоеЛицо,
	|	НачислениеЗаПервуюПоловинуМесяца.МесяцНачисления КАК МесяцНачисления,
	|	НачислениеЗаПервуюПоловинуМесяца.Ссылка КАК ДокументОснование
	|ПОМЕСТИТЬ ВТДокументыОснования
	|ИЗ
	|	РегистрСведений.ДокументыУчтенныеПриРасчетеНДФЛ КАК ДокументыУчтенныеПриРасчетеНДФЛ
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.НачислениеЗаПервуюПоловинуМесяца КАК НачислениеЗаПервуюПоловинуМесяца
	|		ПО ДокументыУчтенныеПриРасчетеНДФЛ.Регистратор = НачислениеЗаПервуюПоловинуМесяца.Ссылка
	|ГДЕ
	|	НачислениеЗаПервуюПоловинуМесяца.Организация = &Организация
	|	И НачислениеЗаПервуюПоловинуМесяца.МесяцНачисления В(&Месяцы)
	|	И ДокументыУчтенныеПриРасчетеНДФЛ.ФизическоеЛицо В(&ФизическиеЛица)";
	// Проверяем, есть ли вообще зарегистрированные авансами доходы.
	Если Запрос.Выполнить().Выгрузить()[0].Количество = 0 Тогда
		Возврат
	КонецЕсли;
	
	Запрос.УстановитьПараметр("Регистратор", Регистратор);
	Запрос.УстановитьПараметр("ГоловнаяОрганизация", ЗарплатаКадры.ГоловнаяОрганизация(Организация));
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ДокументыОснования.ФизическоеЛицо КАК ФизическоеЛицо,
	|	ДокументыОснования.МесяцНачисления КАК МесяцНачисления
	|ПОМЕСТИТЬ ВТФизическиеЛица
	|ИЗ
	|	ВТДокументыОснования КАК ДокументыОснования
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрНакопления.СведенияОДоходахНДФЛ КАК СведенияОДоходахНДФЛ
	|		ПО ДокументыОснования.ФизическоеЛицо = СведенияОДоходахНДФЛ.ФизическоеЛицо
	|			И (НАЧАЛОПЕРИОДА(ДокументыОснования.МесяцНачисления, МЕСЯЦ) = НАЧАЛОПЕРИОДА(СведенияОДоходахНДФЛ.ЗарегистрированоПриНачисленииАванса, МЕСЯЦ))
	|ГДЕ
	|	СведенияОДоходахНДФЛ.ГоловнаяОрганизация = &ГоловнаяОрганизация
	|	И СведенияОДоходахНДФЛ.Организация = &Организация
	|	И СведенияОДоходахНДФЛ.Регистратор <> &Регистратор
	|
	|СГРУППИРОВАТЬ ПО
	|	ДокументыОснования.ФизическоеЛицо,
	|	ДокументыОснования.МесяцНачисления
	|
	|ИМЕЮЩИЕ
	|	СУММА(СведенияОДоходахНДФЛ.СуммаДохода - СведенияОДоходахНДФЛ.СуммаВычета) <> 0";
	// Проверяем, остались ли зарегистрированные авансами доходы.
	Если Запрос.Выполнить().Выгрузить()[0].Количество = 0 Тогда
		Возврат
	КонецЕсли;
	
	// Соберем данные для распределения дополнительных строк по подразделениям из текущих доходов.
	СоздаватьТаблицуРаспределения = Истина;
	Если ПроведениеСервер.ЕстьДвижения(Движения, "ДокументыУчтенныеПриРасчетеНДФЛ") Тогда
		Основания = Движения.ДокументыУчтенныеПриРасчетеНДФЛ.ВыгрузитьКолонку("ДокументОснование");
		ОбщегоНазначенияКлиентСервер.УдалитьВсеВхожденияЗначенияИзМассива(Основания, Регистратор);
		Если Основания.Количество() > 0 Тогда
			СоздаватьТаблицуРаспределения = Ложь;
			СоответствиеФизическихЛиц = ОбщегоНазначенияБЗККлиентСервер.МассивВСоответствие(Движения.ДокументыУчтенныеПриРасчетеНДФЛ.ВыгрузитьКолонку("ФизическоеЛицо"));
			Запрос.УстановитьПараметр("Основания", Основания);
			Запрос.Текст = 
			"ВЫБРАТЬ
			|	НАЧАЛОПЕРИОДА(СведенияОДоходахНДФЛ.Период, МЕСЯЦ) КАК ПериодРегистрации,
			|	СведенияОДоходахНДФЛ.ФизическоеЛицо КАК ФизическоеЛицо,
			|	СведенияОДоходахНДФЛ.СуммаДохода КАК СуммаДохода,
			|	СведенияОДоходахНДФЛ.Подразделение КАК Подразделение,
			|	СведенияОДоходахНДФЛ.ПодразделениеСотрудника КАК ПодразделениеСотрудника,
			|	СведенияОДоходахНДФЛ.РегистрацияВНалоговомОргане КАК РегистрацияВНалоговомОргане
			|ИЗ
			|	РегистрНакопления.СведенияОДоходахНДФЛ КАК СведенияОДоходахНДФЛ
			|ГДЕ
			|	СведенияОДоходахНДФЛ.Регистратор В(&Основания)";
			СтрокиРаспределения = Запрос.Выполнить().Выгрузить();
			СтрокиКУдалению = Новый Соответствие;
			Для каждого СтрокаТЗ Из СтрокиРаспределения Цикл
				Если СоответствиеФизическихЛиц[СтрокаТЗ.ФизическоеЛицо] = Неопределено Тогда
					СтрокиКУдалению.Вставить(СтрокаТЗ, Истина)
				КонецЕсли;
			КонецЦикла;
			Для Каждого УдаляемаяСтрока Из СтрокиКУдалению Цикл
				СтрокиРаспределения.Удалить(УдаляемаяСтрока.Ключ);		
			КонецЦикла;	
		КонецЕсли;
	КонецЕсли;
	Если СоздаватьТаблицуРаспределения Тогда
		СтрокиРаспределения = Новый ТаблицаЗначений;
		СтрокиРаспределения.Колонки.Добавить("ПериодРегистрации", Новый ОписаниеТипов("Дата"));
