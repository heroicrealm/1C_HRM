		СтрокаТаблицы.ДатаОкончания  = СериализацияБЗК.ЗначениеXML(ЗначенияПолей.servDt2,  Тип("Дата"));
		СтрокаТаблицы.ДатаРождения   = СериализацияБЗК.ЗначениеXML(ЗначенияПолей.birthday, Тип("Дата"));
		СтрокаТаблицы.ВозрастЛет     = СериализацияБЗК.ЗначениеXML(ЗначенияПолей.servAge,  Тип("Число"));
		СтрокаТаблицы.ВозрастМесяцев = СериализацияБЗК.ЗначениеXML(ЗначенияПолей.servMm,   Тип("Число"));
		СтрокаТаблицы.КодПричины     = ЗначениеXMLТипаСтрока(ЗначенияПолей.reason1);
		СтрокаТаблицы.ТипЛечения     = ЗначениеXMLТипаСтрока(ЗначенияПолей.treatmentType);
		СтрокаТаблицы.КодСвязи       = ЗначениеXMLТипаСтрока(ЗначенияПолей.servRelationCode);
		СтрокаТаблицы.СНИЛС          = УчетПособийСоциальногоСтрахованияКлиентСервер.СНИЛСВФорматеИБ(ЗначениеXMLТипаСтрока(ЗначенияПолей.snils));
		СтрокаТаблицы.Фамилия        = ТРег(ЗначениеXMLТипаСтрока(ЗначенияПолей.surname));
		СтрокаТаблицы.Имя            = ТРег(ЗначениеXMLТипаСтрока(ЗначенияПолей.name));
		СтрокаТаблицы.Отчество       = ТРег(ЗначениеXMLТипаСтрока(ЗначенияПолей.patronymic));
		СтрокаТаблицы.ФИО            = СокрП(СтрокаТаблицы.Фамилия + " " + СтрокаТаблицы.Имя + " " + СтрокаТаблицы.Отчество);
		СтрокаТаблицы.РежимЛечения   = Перечисления.РежимыЛечения.НайтиПоКоду(СтрокаТаблицы.ТипЛечения);
	КонецЦикла;
	
	Возврат Результат;
КонецФункции

