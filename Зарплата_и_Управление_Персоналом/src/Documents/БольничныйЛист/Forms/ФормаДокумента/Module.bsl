		Результат = Результат + " " + НСтр("ru = '(40 - опекун)'");
	ИначеЕсли СтрокаТаблицы.КодСвязи = "41" Тогда
		Результат = Результат + " " + НСтр("ru = '(41 - попечитель)'");
