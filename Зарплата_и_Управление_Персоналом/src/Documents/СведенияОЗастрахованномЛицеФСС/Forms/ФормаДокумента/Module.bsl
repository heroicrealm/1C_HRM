	|	И НЕ ВидыДокументовФизическихЛиц.ПометкаУдаления";
	
	Таблица = Запрос.Выполнить().Выгрузить();
	Если Таблица.Количество() = 0 Тогда
		УстановитьОтключениеБезопасногоРежима(Истина);
		УстановитьПривилегированныйРежим(Истина);
		КадровыйУчет.ЗаполнитьДокументыФизическихЛицПоКлассификаторуМВД();
		УстановитьПривилегированныйРежим(Ложь);
		УстановитьОтключениеБезопасногоРежима(Ложь);
		Таблица = Запрос.Выполнить().Выгрузить();
	КонецЕсли;
	Если Таблица.Количество() < 2 Тогда
		Элементы.РазрешениеНаПроживаниеВид.КнопкаСоздания = Истина;
	КонецЕсли;
	
	Для Каждого СтрокаТаблицы Из Таблица Цикл
		СписокВыбора.Добавить(СтрокаТаблицы.Ссылка, "(" + СтрокаТаблицы.КодМВД + ") " + СтрокаТаблицы.Представление);
	КонецЦикла;
	
	Если ЗначениеЗаполнено(Объект.РазрешениеНаПроживаниеВид)
		И СписокВыбора.НайтиПоЗначению(Объект.РазрешениеНаПроживаниеВид) = Неопределено Тогда
		СписокВыбора.Добавить(Объект.РазрешениеНаПроживаниеВид);
	КонецЕсли;
	
