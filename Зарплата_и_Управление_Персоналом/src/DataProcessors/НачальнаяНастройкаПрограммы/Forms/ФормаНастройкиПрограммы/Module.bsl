		,
		,
		Новый ОписаниеОповещения("ОбработкаЗавершенияПереносаДанных", ЭтаФорма),
		РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);

КонецПроцедуры

&НаКлиенте
Процедура ОбработкаЗавершенияПереносаДанных(Результат, ДополнительныеПараметры) Экспорт

	Если Результат = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ВыполненПереносДанных = Результат.ПереносДанныхВыполнялся И Результат.ПереносДанныхЗавершенУспешно;
	Если ВыполненПереносДанных Тогда
		ВыполненВариантПереноса = Результат.РежимВыгрузки;
		Модифицированность = Ложь;
		СохранитьРеквизитыФормыНаСервере();
		ОбновитьИнтерфейс();
	КонецЕсли;

КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура ОбновитьНачальнуюСтраницу(Форма, УспешноВыполненПереносДанных = Ложь)

	Если Не Форма.ЕстьДоступныеВариантыПереносаДанных Тогда
		Возврат;
	КонецЕсли;
	
	Элементы = Форма.Элементы;
	
	Если Форма.ВыполненПереносДанных Тогда
		ОписаниеВарианта = НСтр("ru = 'Продолжить настройку программы'");
		Элементы.ВариантыНачалаРаботы.СписокВыбора.Удалить(0);
		Элементы.ВариантыНачалаРаботы.СписокВыбора.Вставить(0,"",ОписаниеВарианта);
	КонецЕсли;
	
	Элементы.Вперед2.Доступность = Не Форма.ВыполнитьПереносДанных;
	Элементы.ОткрытьПомощникПереходаСПрошлыхПрограмм.Доступность = Форма.ВыполнитьПереносДанных;
	
	Элементы.ИнфоТекстПерваяСтраница.Видимость  = Форма.ВыполненПереносДанных;
	Элементы.ИнфоТекстПерваяСтраница1.Видимость = Форма.ВыполненПереносДанных;
	Элементы.ИнфоТекстПерваяСтраница2.Видимость = Не Форма.ВыполненПереносДанных;
	Элементы.ИнфоТекстПерваяСтраница3.Видимость = Не Форма.ВыполненПереносДанных;

КонецПроцедуры

