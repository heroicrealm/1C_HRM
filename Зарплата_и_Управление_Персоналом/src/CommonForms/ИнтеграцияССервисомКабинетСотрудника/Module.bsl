					СтрСообщение = НСтр("ru = 'данные 1 сотрудника и его расчетные листки за'");
					ДопСтрокаСообщения = СтрШаблон(", %1 %2", СтрСообщение, ПредставлениеПериода);
				КонецЕсли;
			ИначеЕсли ПубликуемыхКабинетов > 1 Тогда
				Если ПустаяСтрока(ПредставлениеПериода) Тогда
					СтрСообщение = НСтр("ru = 'и данные %1 сотрудников'");
					СтрСообщение = СтрШаблон(СтрСообщение, ПубликуемыхКабинетов);
					ДопСтрокаСообщения = СтрШаблон(" %1", СтрСообщение);
				Иначе
					СтрСообщение = НСтр("ru = 'данные %1 сотрудников и их расчетные листки за'");
					СтрСообщение = СтрШаблон(СтрСообщение, ПубликуемыхКабинетов);
					ДопСтрокаСообщения = СтрШаблон(", %1 %2", СтрСообщение, ПредставлениеПериода);
				КонецЕсли;
			КонецЕсли;
			
		Иначе
			
			Если ПубликуемыхКабинетов = 1 Тогда
				Если Не ПустаяСтрока(ПредставлениеПериода) Тогда
					СтрСообщение = НСтр("ru = 'и его расчетные листки за'");
					ДопСтрокаСообщения = СтрШаблон(" %1 %2", СтрСообщение, ПредставлениеПериода);
				КонецЕсли;
			ИначеЕсли ПубликуемыхКабинетов > 1 Тогда
				ПериодРасчетныхЛистков = "";
				Если Не ПустаяСтрока(ПредставлениеПериода) Тогда
					СтрокаШаблон = НСтр("ru = 'и их расчетные листки за %1'");
					ПериодРасчетныхЛистков = СтрШаблон(СтрокаШаблон, ПредставлениеПериода);
				КонецЕсли;
				СтрокаШаблон = НСтр("ru = 'При нажатии кнопки Подключить по адресу ""%1"" будут опубликованы данные %2 сотрудников %3.'");
				Строка1 = СтрШаблон(СтрокаШаблон, АдресПриложения, ПубликуемыхКабинетов, ПериодРасчетныхЛистков);
				Строка2 = НСтр("ru = 'Эти данные будут доступны только сотрудникам и их руководителям.'");
				СтрокаСообщения = СтрШаблон("%1" + Символы.ПС + "%2", Строка1, Строка2);
			КонецЕсли;
			
		КонецЕсли;
	
	КонецЕсли;
	
	СтрокаСообщения = СтрШаблон("%1%2", СтрокаСообщения, ДопСтрокаСообщения);
	Элементы.ДекорацияПодключениеОписание.Заголовок = СтрокаСообщения;
	
КонецПроцедуры

